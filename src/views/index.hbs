<div id="AcercaDeMi"></div>
<section>
    <div class="container-fluid my-5">
        <h2 class="text-center text-white">ACERCA DE MI</h2>
        <hr class="w-75 bg-dark">
        <div class="row">
            <div class="col-md-10 mx-auto mt-3">
                <div class="row">
                    {{#each descripciones}}
                    <div class="col col-12 col-md-12 col-sm-12 col-lg-4 text-center mt-4">
                        <img src="{{imagen}}" class="img-aboutMe">
                    </div>
                    <div class="col col-12 col-md-12 col-sm-12 col-lg-8 mt-4 text-white">
                        <h4>¿Quieres conocerme?</h4>
                        <hr class="bg-dark">
                        <p class="text-justify">{{descripcion}}</p>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<hr class="bg-secondary" id="MisHabilidades">
<section>
    <div class="container-fluid my-5">
        <h2 class="text-center text-white">MIS HABILIDADES</h2>
        <hr class="w-75 bg-dark">
        <div class="row">
            <div class="col-md-10 mx-auto mt-3">
                <div class="row justify-content-md-center aling-items-center p-4">
                    {{#each habilidades}}
                    <div class="col col-12 col-sm-12 col-md-3 col-lg-3 mb-4">
                        <div class="card text-center h-100 rounded project-sobresalir border-secondary bg-dark text-white">
                            <div class="card-header">
                                <img src="{{imagen}}" class="img-card">
                                <h5 class="font-weight-bold text-center mt-4">{{habilidad}}</h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">{{descripcion}}</p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
<hr class="bg-secondary" id="MisProyectos">
<section>
    <div class="container-fluid my-5">
        <h2 class="text-center text-white">MIS PROYECTOS</h2>
        <hr class="w-75 bg-dark">
        <div class="row">
            <div class="col-md-10 mx-auto mt-3">
                <div class="row justify-content-md-center aling-items-center p-4">
                    {{#each proyectos}}
                    <div class="col col-12 col-sm-12 col-md-6 col-lg-6 mb-4">
                        <div class="card text-center h-100 rounded project-sobresalir border-secondary bg-dark text-white">
                            <div class="card-header">
                                <div class="row d-flex align-items-center">
                                    <div class="col col-12 col-sm-12 col-md-4 col-lg-4">
                                        <img src="{{imagen}}" class="img-card">
                                    </div>
                                    <div class="col col-12 col-sm-12 col-md-8 col-lg-8 mt-4">
                                        <h5 class="font-weight-bold text-center">{{proyecto}}</h5>
                                        <p><small>{{fecha}}</small></p>
                                    </div>
                                </div>
                            </div>
                            <div class="card-body text-justify">
                                <p class="text-muted">{{descripcion}}</p>
                            </div>
                            <div class="card-footer">
                                <a href="{{repositorio}}" class="btn btn-dark btn-block" target="_blank"><i class="fas fa-eye"></i> Ver
                                    repositorio</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</section>
