<div class="modal fade" id="editProyectoModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">EDITAR PROYECTO</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/proyectos/edit/{{id}}" method="POST">
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" name="imagen" value="{{imagen}}" placeholder="Imagen" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <input type="text" name="proyecto" value="{{proyecto}}" placeholder="Proyecto" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <textarea name="descripcion" placeholder="DescripciÃ³n del proyecto" cols="30" rows="10" class="form-control" required>{{descripcion}}</textarea>
                    </div>
                    <div class="form-group">
                        <input type="text" name="repositorio" value="{{repositorio}}" placeholder="Repositorio" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-dark">Editar proyecto</button>
                </div>
            </form>
        </div>
    </div>
</div>